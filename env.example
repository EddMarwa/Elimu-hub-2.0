# ElimuHub 2.0 Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL="file:./server/dev.db"
# For PostgreSQL: postgresql://postgres:password123@localhost:5432/elimuhub

# JWT Configuration
JWT_SECRET=elimuhub-super-secret-jwt-key-2025-change-in-production
JWT_REFRESH_SECRET=elimuhub-refresh-secret-key-2025-change-in-production

# AI Configuration (for AI features)
# Groq API (recommended - faster and more cost-effective)
GROQ_API_KEY=your-groq-api-key-here
GROQ_API_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama3-70b-8192

# OpenRouter API (fallback - provides access to multiple AI models)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Legacy OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# YouTube API Configuration (for video search features)
YOUTUBE_API_KEY=your-youtube-data-api-v3-key-here

# File Upload Configuration
UPLOAD_DIR=server/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,doc,xlsx,xls,txt

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=server/logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Development Configuration
DEBUG=true
ENABLE_SWAGGER=true
